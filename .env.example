# Minitradutor Configuration
# Copy this file to .env and configure the variables

# =============================================================================
# LLM PROVIDER
# =============================================================================
# Choose your LLM provider: anthropic, openai, or mock
# - anthropic: Uses Anthropic Claude (recommended)
# - openai: Uses OpenAI GPT models
# - mock: For testing without API calls
LLM_PROVIDER=mock

# =============================================================================
# API KEYS
# =============================================================================
# Configure only the API key for your chosen provider

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
# ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_key_here

# =============================================================================
# DIGITAL SIGNATURE (Optional)
# =============================================================================
# Enable contract signing with Ed25519
ENABLE_SIGNING=false

# Ed25519 keys in hexadecimal format
# Generate with: deno task cli keygen
# ED25519_PRIVATE_KEY=your_hex_encoded_private_key
# ED25519_PUBLIC_KEY=your_hex_encoded_public_key

# =============================================================================
# PATHS
# =============================================================================
# Path to the NDJSON ledger file
LEDGER_PATH=./output/contracts.ndjson

# =============================================================================
# HTTP SERVER
# =============================================================================
# Port for the HTTP API server
PORT=8000

# Host address (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# =============================================================================
# DEFAULT VALUES
# =============================================================================
# Default tenant identifier (organization/user)
DEFAULT_TENANT_ID=voulezvous

# Default workflow identifier
DEFAULT_WORKFLOW=translation

# Default flow identifier
DEFAULT_FLOW=default
